@model IEnumerable<WebAppfinalMvcMarch3.Models.Candidate>

@{
    ViewBag.Title = "Index";
}

<h2>Candidates</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applied_position)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applied_position)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.candidate_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.candidate_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.candidate_id })
        </td>
    </tr>
}

</table>
